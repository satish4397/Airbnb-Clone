<header class="bg-gradient-to-r from-rose-500 via-red-500 to-pink-500 text-white py-4 px-6 shadow-xl backdrop-blur-sm sticky top-0 z-50">
  <div class="absolute inset-0 bg-black/5 backdrop-blur-sm"></div>
  <nav class="container mx-auto flex justify-between items-center relative">
    <div class="transform hover:scale-105 transition-all duration-300">
      <a
        href="/"
        class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-pink-100 hover:from-pink-100 hover:to-white transition-all duration-500 inline-flex items-center group"
      >
        <svg class="w-8 h-8 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12.0002 1.99951C16.9707 1.99951 21.0002 6.02901 21.0002 10.9995C21.0002 13.8525 19.7487 16.5027 17.6987 18.4672L12.0002 23.9995L6.30174 18.4672C4.25174 16.5027 3.00024 13.8525 3.00024 10.9995C3.00024 6.02901 7.02974 1.99951 12.0002 1.99951ZM12.0002 3.99951C8.13424 3.99951 5.00024 7.13351 5.00024 10.9995C5.00024 13.1565 5.97774 15.1717 7.63474 16.7502L12.0002 20.9995L16.3657 16.7502C18.0227 15.1717 19.0002 13.1565 19.0002 10.9995C19.0002 7.13351 15.8662 3.99951 12.0002 3.99951Z"/>
        </svg>
        Airbnb
      </a>
    </div>
    <ul class="flex items-center space-x-2 md:space-x-6">
      <li class="relative group">
        <a
          href="/"
          class="py-2 px-4 rounded-full transition-all duration-300 flex items-center space-x-2 group hover:bg-white/10 <%= currentPage === 'index' ? 'text-white font-semibold bg-white/15 shadow-lg shadow-white/10' : 'hover:text-white' %>"
        >
          <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
          </svg>
          <span class="relative">
            Home
            <span class="absolute inset-x-0 -bottom-1 h-0.5 bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
          </span>
        </a>
      </li>
      <% if (isLoggedIn) { %>
        <% if (user && user.userType=== 'guest' ) { %>
            <li class="relative group">
          <a
            href="/homes"
            class="py-2 px-4 transition duration-300 flex items-center space-x-2 <%= currentPage === 'Home' ? 'text-white font-semibold' : 'hover:text-white' %>"
          >
            <span>Home List</span>
            <% if (currentPage === 'Home') { %>
              <span class="absolute left-0 -bottom-1 block w-full h-0.5 bg-white shadow-glow"></span>
            <% } else { %>
              <span class="absolute left-0 -bottom-1 block w-0 group-hover:w-full h-0.5 bg-white/70 transition-all duration-300"></span>
            <% } %>
          </a>
            </li>
            <li class="relative">
          <a
            href="/favourites"
            class="py-2 px-4 transition duration-300 <%= currentPage === 'favourites' ? 'text-red-300' : 'hover:text-red-300' %>"
          >
            Favourites
            <% if (currentPage === 'favourites') { %>
              <span class="absolute left-0 -bottom-1 block w-full h-0.5 bg-red-300"></span>
            <% } %>
          </a>
            </li>
            <li class="relative">
          <a
            href="/bookings"
            class="py-2 px-4 transition duration-300 <%= currentPage === 'bookings' ? 'text-red-300' : 'hover:text-red-300' %>"
          >
            Bookings
            <% if (currentPage === 'bookings') { %>
              <span class="absolute left-0 -bottom-1 block w-full h-0.5 bg-red-300"></span>
            <% }  %>
          </a>
            </li>

        <% } else { %>

           <li class="relative">
          <a
            href="/host/host-home-list"
            class="py-2 px-4 transition duration-300 <%= currentPage === 'host-homes' ? 'text-red-300' : 'hover:text-red-300' %>"
          >
            Host Homes
            <% if (currentPage === 'host-homes') { %>
              <span class="absolute left-0 -bottom-1 block w-full h-0.5 bg-red-300"></span>
            <% } %>
          </a>
           </li>
           <li class="relative">
          <a
            href="/host/add-home"
            class="py-2 px-4 transition duration-300 <%= currentPage === 'addHome' ? 'text-red-300' : 'hover:text-red-300' %>"
          >
            Add Home
            <% if (currentPage === 'addHome') { %>
              <span class="absolute left-0 -bottom-1 block w-full h-0.5 bg-red-300"></span>
            <% } %>
          </a>
           </li>

        <% } %>

          <li class="relative">
          <form action="/logout" method="POST">
            <button
              type="submit"
              class="py-2 px-6 transition-all duration-300 bg-gradient-to-r from-rose-600 to-pink-600 hover:from-rose-500 hover:to-pink-500 rounded-full flex items-center space-x-2 text-white font-medium shadow-lg shadow-rose-500/30 hover:shadow-rose-500/50 transform hover:scale-105"
            >
              <svg class="w-5 h-5 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
                <path d="M5 5h7V3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h7v-2H5V5zm16 7l-4-4v3H9v2h8v3l4-4z"/>
              </svg>
              <span>Logout</span>
            </button>
          </form>
          </li>

      <% } else { %>

          <li class="relative">
          <a
            href="/signup"
            class="py-2 px-6 transition-all duration-300 bg-white/10 hover:bg-white/20 rounded-full inline-flex items-center space-x-2 font-medium hover:shadow-lg hover:shadow-white/10 transform hover:scale-105"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0-6c1.1 0 2 .9 2 2s-.9 2-2 2-2-.9-2-2 .9-2 2-2zm0 8c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4zm-6 4c.22-.72 3.31-2 6-2 2.7 0 5.8 1.29 6 2H9zm-3-3v-3h3v-2H6V7H4v3H1v2h3v3z"/>
            </svg>
            <span>Sign Up</span>
          </a>
          </li>
          <li class="relative">
          <a
            href="/login"
            class="py-2 px-6 transition-all duration-300 bg-gradient-to-r from-rose-600 to-pink-600 hover:from-rose-500 hover:to-pink-500 rounded-full inline-flex items-center space-x-2 font-medium shadow-lg shadow-rose-500/30 hover:shadow-rose-500/50 transform hover:scale-105"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11 7L9.6 8.4l2.6 2.6H2v2h10.2l-2.6 2.6L11 17l5-5-5-5zm9 12h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-8v2h8v14z"/>
            </svg>
            <span>Login</span>
          </a>
          </li>

      <% } %>
      
    </ul>
  </nav>
</header>