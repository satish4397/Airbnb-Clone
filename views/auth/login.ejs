<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-red-100 via-white to-gray-200 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>
  <main class="flex-grow flex items-center justify-center">
    <section class="w-full max-w-md bg-white rounded-xl shadow-lg p-8 border border-gray-200">
      <h1 class="text-4xl font-extrabold mb-8 text-center text-red-600 tracking-tight">Sign In</h1>
      <form action="/login" method="POST" class="space-y-6">

        <%- include('../partials/errors') %>

        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Email or Username</label>
          <input
            type="email"
            id="username"
            name="email"
            placeholder="Enter your Email"
            value="<%= oldInput.email || '' %>"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
            required />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
            required />
        </div>
        <div class="text-right">
            <a href="/forgot-password" class="text-sm text-red-500 hover:underline">
            Forgot your password?
            </a>
        </div>
        <input type="submit" value="Sign In" class="w-full bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition duration-300 cursor-pointer" />
      </form>
      <div class="mt-6 text-center">
        <a href="/signup" class="text-red-500 hover:underline text-sm">Don't have an account? Register</a>
      </div>
    </section>
  </main>
</body>
</html>