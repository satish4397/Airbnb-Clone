<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-red-100 via-white to-gray-200 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-16 p-10 bg-white rounded-2xl shadow-2xl max-w-xl">
    <h1 class="text-4xl font-extrabold mb-10 text-center text-red-600 drop-shadow">
      Create Your Account
    </h1>

    <form action="/signup" method="POST" class="space-y-6">
      
      <%- include('../partials/errors') %>

      <!-- First Name -->
      <div>
        <label for="firstName" class="block text-sm font-bold text-gray-700 mb-2">First Name</label>
        <input
          type="text"
          name="firstName"
          id="firstName"
          placeholder="First Name"
          value="<%= oldInput.firstName || '' %>"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 bg-gray-50"
          required
        />
      </div>

      <!-- Last Name -->
      <div>
        <label for="lastName" class="block text-sm font-bold text-gray-700 mb-2">Last Name</label>
        <input
          type="text"
          name="lastName"
          id="lastName"
          placeholder="Last Name"
          value="<%= oldInput.lastName || '' %>"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 bg-gray-50"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-bold text-gray-700 mb-2">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="test@gmail.com"
          value="<%= oldInput.email || '' %>"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 bg-gray-50"
          required
        />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-sm font-bold text-gray-700 mb-2">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter Your Password"
          value=""
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 bg-gray-50"
          required
        />
      </div>

      <!-- Confirm Password -->
      <div>
        <label for="confirmPassword" class="block text-sm font-bold text-gray-700 mb-2">Confirm Password</label>
        <input
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          placeholder="Confirm Your Password"
          value=""
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 bg-gray-50"
          required
        />
      </div>

      <!-- User Type -->
      <div class="mb-4">
        <p class="font-semibold mb-2 text-gray-700">User Type</p>
        <div class="flex items-center space-x-8">
          <label for="guest" class="flex items-center cursor-pointer">
            <input
              type="radio"
              name="userType"
              value="guest"
              id="guest"
              class="accent-red-500"
              <%= oldInput.userType === "guest" ? "checked" : "" %>
            />
            <span class="ml-2 text-gray-700">Guest</span>
          </label>
          <label for="host" class="flex items-center cursor-pointer">
            <input
              type="radio"
              name="userType"
              value="host"
              id="host"
              class="accent-red-500"
              <%= oldInput.userType === "host" ? "checked" : "" %>
            />
            <span class="ml-2 text-gray-700">Host</span>
          </label>
        </div>
      </div>

      <!-- Terms Checkbox -->
      <div class="flex items-center mb-4">
        <input
          type="checkbox"
          name="terms"
          id="terms"
          class="accent-red-500"
          required
        />
        <label for="terms" class="ml-2 text-gray-700 text-sm">
          I agree to the <a href="#" class="text-red-500 underline hover:text-red-700">terms and conditions</a>
        </label>
      </div>

      <!-- Submit Button -->
      <div>
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white py-3 rounded-lg font-bold shadow hover:from-red-600 hover:to-red-700 transition duration-300"
        >
          Register
        </button>
      </div>

      <!-- Login Link -->
      <div class="text-center mt-6">
        <p class="text-gray-600 text-sm">
          Already have an account?
          <a href="/login" class="text-red-500 font-semibold hover:underline">Login</a>
        </p>
      </div>
    </form>
  </main>
</body>
</html>